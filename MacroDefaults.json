    {
        "key": "backspace",
        "command": "-deleteLeft",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "backspace",
        "command": "macros.deleteLeft_cancelMark",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+backspace",
        "command": "-deleteWordLeft",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+backspace",
        "command": "macros.deleteWordLeft_cancelMark",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "delete",
        "command": "-deleteRight",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "delete",
        "command": "macros.deleteRight_cancelMark",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+delete",
        "command": "-deleteWordRight",
        "when": "editorTextFocus && !editorReadonly"
