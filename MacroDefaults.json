[
    {
        "key": "ctrl+x",
        "command": "-editor.action.clipboardCutAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+x",
        "command": "macros.editor.action.clipboardCutAction_cancelMark",
        "when": "editorTextFocus && !editorReadonly"
    },

    {
